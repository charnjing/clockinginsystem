<body>

<h2>Employee Reporting Form</h2>

<form id="reportForm">
    <!-- Employee ID -->
    <label for="employeeId">Employee ID:</label>
    <input type="text" id="employeeId" placeholder="Enter your Employee ID" required>

    <!-- Take Picture -->
    <label for="photo">Take a Photo:</label>
    <input type="file" id="photo" accept="image/*" capture="camera" required>

    <!-- Submit Button -->
    <button type="button" id="submitBtn">Submit</button>
</form>

<script>
    // Load Employee ID from localStorage on page load
    document.addEventListener('DOMContentLoaded', () => {
        const savedEmployeeId = localStorage.getItem('employeeId');
        if (savedEmployeeId) {
            document.getElementById('employeeId').value = savedEmployeeId;
        }
    });

    // Save Employee ID to localStorage when submitted
    document.getElementById('submitBtn').addEventListener('click', () => {
        const employeeId = document.getElementById('employeeId').value;
        const photoInput = document.getElementById('photo');

        if (!employeeId || !photoInput.files.length) {
            alert('Please fill in all fields and take a photo.');
            return;
        }

        // Save Employee ID locally
        localStorage.setItem('employeeId', employeeId);

        // Prepare data to store
        const file = photoInput.files[0];
        const currentDate = new Date();
        const data = {
            employeeId,
            photo: file.name, // Placeholder: file should be uploaded to a server
            timestamp: currentDate.toISOString(),
            location: 'Latitude, Longitude' // Placeholder: Replace with real location
        };

        console.log(data); // Debug: log data
        alert('Form submitted successfully!');

        // Placeholder for Excel integration
        // You can send 'data' to a server-side script that writes it to an Excel file.
    });
</script>

</body>
</html>
